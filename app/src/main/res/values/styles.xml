<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StartBtn" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:text">@string/start</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_start_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_1</item>
    </style>

    <style name="RestartBtn" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:text">@string/restart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_restart_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_3</item>
    </style>

</resources>
